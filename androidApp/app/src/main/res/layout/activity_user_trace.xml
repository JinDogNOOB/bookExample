<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="고기 정보"
            android:background="@color/colorAccent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="고기 키::"
                android:layout_weight="5"/>
            <TextView
                android:id="@+id/a_usertrace_key_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상태::"
                    android:layout_weight="5"/>
                <TextView
                    android:id="@+id/a_usertrace_status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고기 정보"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="무게::"
                    android:layout_weight="5"/>
                <TextView
                    android:id="@+id/a_usertrace_weight_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="고기 정보"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/a_usertrace_desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="설명::"
                    android:layout_weight="5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="고기 정보"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:id="@+id/a_usertrace_gotolist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도축 이력 확인"
                />
            <Button
                android:id="@+id/a_usertrace_cowinfo_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소 정보 확인"/>
        <Button
            android:id="@+id/a_usertrace_bought_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고기 구입 완료"/>

    </LinearLayout>



</LinearLayout>